<?xml version="1.0" encoding="utf-8"?>

<!-- === ADDRESS === -->
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MaterialComponents.CardView"
    android:id="@+id/address_mcv"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_town_hall_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <!-- TITLE -->
        <TextView
            android:id="@+id/fragment_town_hall_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:text="@string/contact_information"
            android:textSize="@dimen/size_text_title"
            android:textStyle="bold"
            />
        <!-- ADDRESS LINE 1 -->
        <TextView
            android:id="@+id/fragment_town_hall_address_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_address_title"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/address_line_1"
            android:textSize="@dimen/size_text"
            />
        <!-- ADDRESS LINE 2 -->
        <TextView
            android:id="@+id/fragment_town_hall_address_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_address_line_1"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/address_line_2"
            android:textSize="@dimen/size_text"
            />
        <!-- ADDRESS LINE 3 -->
        <TextView
            android:id="@+id/fragment_town_hall_address_line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_address_line_2"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/address_line_3"
            android:textSize="@dimen/size_text"
            />
        <!-- ADDRESS LINE 4 -->
        <TextView
            android:id="@+id/fragment_town_hall_address_line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_address_line_3"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/address_line_4"
            android:textSize="@dimen/size_text"
            />
        <!-- EMAIL -->
        <TextView
            android:id="@+id/fragment_town_hall_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_address_line_4"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/email"
            android:textSize="@dimen/size_text"
            />
        <!-- PHONE -->
        <TextView
            android:id="@+id/fragment_town_hall_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_email"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/phone"
            android:textSize="@dimen/size_text"
            />
        <!-- URL -->
        <TextView
            android:id="@+id/fragment_town_hall_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_town_hall_phone"
            app:layout_constraintStart_toStartOf="@+id/fragment_town_hall_address_line_1"
            android:hint="@string/url"
            android:textSize="@dimen/size_text"
            android:onClick="onUrlClick"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/com_smart_login_code"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

            