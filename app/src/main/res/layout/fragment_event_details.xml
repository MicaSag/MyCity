<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:id="@+id/fragment_list_estate_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="1dp"
    app:elevation="8dp">

    <ScrollView
        android:id="@+id/fragment_details_root_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_event_details_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".controllers.fragments.EventDetailsFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_details_guideline_horizontal_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.10" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_details_guideline_horizontal_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_details_guideline_horizontal_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_details_guideline_vertical_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />


            <!-- (1) <<<<<<<<  FIRST SECTION    >>>>>>>>  -->
            <!-- (1)(1) FIRST COLUMN -->
            <!-- (1)(1) TITLE -->
            <TextView
                android:id="@+id/fragment_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="TITRE DE L'EVENEMENT"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorAccent"
                />

            <!-- (2) <<<<<<<<  SECOND SECTION    >>>>>>>>  -->
            <!-- (2)(1) FIRST COLUMN -->
            <!-- (2)(1) DATE : Start Date -->
            <TextView
                android:id="@+id/fragment_details_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_guideline_horizontal_10"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Start Date"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorAccent"
                />

            <!-- (2)(2) SECOND COLUMN -->
            <!-- (2)(2) DATE : End Date -->
            <TextView
                android:id="@+id/fragment_details_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="@+id/fragment_details_start_date"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_details_start_date"
                app:layout_constraintStart_toStartOf="@id/fragment_details_guideline_vertical_50"
                android:text="End Date"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorAccent"
                />

            <!-- (3) <<<<<<<<  THIRD SECTION    >>>>>>>>  -->
            <!-- (3)(1) FIRST COLUMN -->
            <!-- (3)(1) DESCRIPTION : Title -->
            <TextView
                android:id="@+id/fragment_details_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_guideline_horizontal_20"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Description"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="normal"
                android:textColor="@color/colorAccent"
                />
            <!-- (3)(1) DESCRIPTION : Text -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/fragment_details_description_text_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_description_title"
                app:layout_constraintBottom_toTopOf="@+id/fragment_details_guideline_horizontal_60"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/fragment_details_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description text"
                    android:textSize="16sp"
                    />
            </androidx.core.widget.NestedScrollView>

            <!-- (3)(2) SECOND COLUMN -->
            <!-- (3)(2) MEDIA : List of photos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_details_photos_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/fragment_details_description_text_scroll"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_details_description_text_scroll"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_guideline_vertical_50" />

            <!-- (4) <<<<<<<<  FOURTH SECTION    >>>>>>>>  -->
            <!-- (4)(1) FIRST COLUMN -->
            <!-- (4)(1) LOCATION : Logo -->
            <ImageView
                android:id="@+id/fragment_details_location_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_guideline_horizontal_60"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/baseline_perm_identity_black_24"
                />
            <!-- (4)(1) LOCATION : title -->
            <TextView
                android:id="@+id/fragment_details_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/fragment_details_location_logo"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_details_location_logo"
                app:layout_constraintStart_toEndOf="@+id/fragment_details_location_logo"
                android:text="Location Title"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />
            <!-- (4)(1) LOCATION : Address Line 1 -->
            <TextView
                android:id="@+id/fragment_details_location_address_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_location_logo"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_location_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="number and the way of wording"
                android:textSize="16sp"
                />
            <!-- (4)(1) LOCATION : Address Line 2 -->
            <TextView
                android:id="@+id/fragment_details_location_address_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_location_address_line_1"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_location_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="additional address"
                android:textSize="16sp"
                />
            <!-- (4)(1) LOCATION : Address Line 3 -->
            <TextView
                android:id="@+id/fragment_details_location_address_line_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_location_address_line_2"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_location_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="postal code"
                android:textSize="16sp"
                />
            <!-- (4)(1) LOCATION : Address Line 4 -->
            <TextView
                android:id="@+id/fragment_details_location_address_line_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_location_address_line_3"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_location_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="city"
                android:textSize="16sp"
                />
            <!-- (4)(1) LOCATION : Address Line 5 -->
            <TextView
                android:id="@+id/fragment_details_location_address_line_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_details_location_address_line_4"
                app:layout_constraintStart_toStartOf="@+id/fragment_details_location_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="state"
                android:textSize="16sp"
                />

            <!-- (4)(2) SECOND COLUMN -->
            <!-- (4)(2) SECOND COLUMN : Static Map -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/fragment_list_estate_mcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/fragment_details_location_logo"
                app:layout_constraintStart_toStartOf="@id/fragment_details_guideline_vertical_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/fragment_details_static_map"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>