<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"> <!-- disable the navigation bar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Authentication Activity theme. -->
    <style name="AppThemeFirebase" parent="Theme.AppCompat.DayNight.NoActionBar"> <!-- disable the navigation bar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- DialogFragment -->
    <style name="Dialog.FullScreen" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/dialog_major_size</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_minor_size</item>
    </style>



    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/size_text_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="TextFieldTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>
